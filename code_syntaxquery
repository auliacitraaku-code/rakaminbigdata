-- #standardSQL
-- Bangun tabel analisa (versi refactor, output identik)
CREATE OR REPLACE TABLE `kimia_farma.kf_analysis` AS
WITH src AS (
  SELECT
    t.transaction_id,
    t.date,
    t.branch_id,
    c.branch_name,
    c.kota,
    c.provinsi,
    c.rating               AS rating_cabang,
    t.customer_name,
    p.product_id,
    p.product_name,
    CAST(t.price AS NUMERIC)               AS actual_price,
    CAST(t.discount_percentage AS NUMERIC) AS discount_pct,
    t.rating                               AS rating_transaksi
  FROM `kimia_farma.kf_final_transaction` AS t
  LEFT JOIN `kimia_farma.kf_kantor_cabang` AS c
    ON t.branch_id = c.branch_id
  LEFT JOIN `kimia_farma.kf_product` AS p
    ON t.product_id = p.product_id
),
calc AS (
  SELECT
    *,
    -- anggap discount_pct dalam persen (0..100)
    discount_pct / 100.0 AS disc_rate,
    -- tarif laba kotor berdasarkan harga 
    CASE
      WHEN actual_price <=  50000 THEN 0.10
      WHEN actual_price <= 100000 THEN 0.15
      WHEN actual_price <= 300000 THEN 0.20
      WHEN actual_price <= 500000 THEN 0.25
      ELSE 0.30
    END AS margin_rate
  FROM src
)
SELECT
  transaction_id,
  date,
  branch_id,
  branch_name,
  kota,
  provinsi,
  rating_cabang,
  customer_name,
  product_id,
  product_name,
  actual_price,
  discount_pct AS discount_percentage,
  margin_rate  AS persentase_gross_laba,
  actual_price * (1 - disc_rate)                    AS nett_sales,
  (actual_price * (1 - disc_rate)) * margin_rate    AS nett_profit,
  rating_transaksi
FROM calc;
